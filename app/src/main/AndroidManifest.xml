<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jaime.inventory">

    <application
        android:name=".InventoryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginTheme" />
        <activity android:name=".InventoryActivity" />
        <activity
            android:name=".DashBoardActivity"
            android:theme="@style/ActionBarTheme" />
        <activity android:name=".ProductActivity" />
        <activity android:name=".DependencyActivity" />
        <activity
            android:name=".SectorActivity"
            android:theme="@style/ActionBarTheme" />
        <activity android:name=".AccountSettingActivity" />
        <activity android:name=".GeneralSettingActivity" />
        <activity android:name=".AboutUsActivity"></activity>
    </application>

</manifest>